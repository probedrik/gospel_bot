# ===========================================
# ОСНОВНЫЕ НАСТРОЙКИ БОТА
# ===========================================

# Токен Telegram бота (получить у @BotFather)
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ID администратора бота (ваш Telegram ID)
ADMIN_USER_ID=123456789

# ===========================================
# API КЛЮЧИ (ОПЦИОНАЛЬНО)
# ===========================================

# OpenAI API ключ для ИИ функций
OPENAI_API_KEY=sk-...

# OpenRouter API ключ для ИИ функций (альтернатива OpenAI)
OPENROUTER_API_KEY=sk-or-v1-...

# Bible API ключ (если используется внешний API)
BIBLE_API_KEY=your_bible_api_key

# ===========================================
# БАЗА ДАННЫХ
# ===========================================

# Тип базы данных (sqlite или postgres)
USE_POSTGRES=false

# Настройки SQLite (используется по умолчанию)
SQLITE_DB_PATH=data/bible_bot.db

# Настройки PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gospel_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=gospel123

# URL базы данных (альтернативный способ конфигурации)
# DATABASE_URL=sqlite:///data/bot.db
# DATABASE_URL=postgresql://postgres:gospel123@localhost:5432/gospel_bot

# ===========================================
# ЛОГИРОВАНИЕ
# ===========================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=logs/bot.log

# ===========================================
# НАСТРОЙКИ ВРЕМЕНИ
# ===========================================

# Часовой пояс
TZ=Europe/Moscow

# ===========================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ===========================================

# Максимальное количество пользователей (0 = без ограничений)
MAX_USERS=0

# Включить режим отладки (true/false)
DEBUG_MODE=false

# Интервал проверки обновлений (секунды)
POLLING_INTERVAL=1

# ===========================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ===========================================

# Секретный ключ для шифрования (сгенерируйте случайную строку)
SECRET_KEY=your_secret_key_here

# Разрешенные домены для webhook (если используется)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# ===========================================

# Размер пула соединений с БД
DB_POOL_SIZE=5

# Максимальное количество соединений с БД
DB_MAX_OVERFLOW=10

# Таймаут соединения с БД (секунды)
DB_TIMEOUT=30 

