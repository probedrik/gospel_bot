# === НАСТРОЙКИ БОТА ===
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_ID=your_telegram_user_id_here

# === НАСТРОЙКИ БАЗЫ ДАННЫХ ===
# Используем Supabase через Python SDK
USE_SUPABASE=true

# === НАСТРОЙКИ SUPABASE ===
# Для Telegram-бота используйте SERVICE ROLE KEY (бот — серверное приложение и может безопасно работать с service-role)
# Это позволит включить RLS и при этом не менять код бота — service role обходит политики.
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your_service_role_key_here

# === НАСТРОЙКИ ИИ ===
OPENAI_API_KEY=your_openai_api_key_here
AI_LIMIT_PER_DAY=10

# === ЛОГИРОВАНИЕ ===
LOG_LEVEL=INFO

# Timezone
TZ=Europe/Moscow

# Пример заполнения:
# POSTGRES_HOST=abcdefghijklmnop.supabase.co
# POSTGRES_PASSWORD=your_very_secure_password_from_supabase 